<div class="container">
    <div class="row">
        @foreach (var book in @Model.Books)
        {<div class="col-md-3 col-sm-6">
            <span class="thumbnail">
                <img src="@book.ImageUrl" class="img-grid" alt="book cover">
                <h4>@book.Name</h4>
                <hr class="line">
                <div class="row">
                    <div class="col-md-6 col-sm-6">
                        <h4>@(book.Price + " $")</h4>
                    </div>
                        @Html.Partial("_Buttons", (long)book.Id)
                </div>
            </span>
        </div>}
    </div>
</div>