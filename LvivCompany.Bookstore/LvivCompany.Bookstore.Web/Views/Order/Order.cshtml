@model ListOrdersViewModel

<div class="container">
    <div class="row">
        <div class="col-lg-11">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">
                        <div class="row">
                            <div class="col-xs-5 text-center">
                                <h4><span>Item</span></h4>
                            </div>
                            <div class="col-xs-3">
                                <span> </span>
                            </div>
                            <div class="col-xs-1 text-center">
                                <h4><span>Quantity</span></h4>
                            </div>
                            <div class="col-xs-1 text-right">
                                <h4><span>Price</span></h4>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- BEGIN PRODUCTS -->

                @if (Model.Models.Count == 0)
                {
                    <h1>Shopping cart is Empty</h1>
                }
                else
                {
                    <form asp-controller="Order" asp-action="UpdateOrder" method="post">
                        @for (int i = 0; i < Model.Models.Count; i++)
                        {
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-xs-2">
                                        <img class="img-responsive" src="@Model.Models[i].ImageURL" />

                                    </div>
                                    <div class="col-xs-6">
                                        <h4 class="product-name strong">@Model.Models[i].BookName</h4>
                                        <h4><small>@Model.Models[i].Category</small></h4>
                                    </div>
                                    <div class="col-xs-4">
                                        <div class="col-xs-3">
                                            <input type="number" name="quantity" value="@Model.Models[i].Quantity" class="form-control input-group" />
                                        </div>
                                        <div class="col-xs-3 text-right">
                                            <h6 class="strong">@Model.Models[i].Price.ToString(" 0.00")<span class="text-muted"> $</span></h6>
                                            <input asp-for="@Model.Models[i].Price" type="hidden" class="form-control input-group" />
                                        </div>
                                        <div class="col-xs-5">
                                            <a class="btn btn-danger" asp-controller="Order" asp-action="RemoveFromOrder" asp-route-id="@Model.Models[i].BookId">Remove</a>
                                        </div>
                                    </div>
                                </div>
                                <hr>
                            </div>
                        }


                        <div class="panel-footer">
                            <div class="row text-center">
                                <div class="col-xs-6">
                                </div>

                                <div class="col-xs-3">
                                    @if (Model.Models.Count != 0)
                                    {
                                        <button type="submit" class="btn btn-default btn-block glyphicon glyphicon-refresh ">
                                            Update
                                        </button>
                                    }
                                </div>

                                <div class="col-xs-3">
                                    @foreach (var item in Model.Models)
                                    {
                                        Model.TotalPrice += item.TotalPrice;
                                    }

                                    <h4 class="text-center strong">Total Price: @Model.TotalPrice.ToString(" 0.00") $</h4>
                                </div>
                            </div>
                        </div>
                    </form>
                }
                <!-- END PRODUCTS -->

                <div class="panel-footer">
                    <div class="row text-center">
                        <div class="col-xs-6">
                        </div>

                        <div class="col-xs-3">
                            <a class="btn btn-default btn-block" asp-controller="Home" asp-action="Index">
                                Continue Shopping
                                <span class="glyphicon glyphicon-shopping-cart"></span>
                            </a>
                        </div>
                        <div class="col-xs-3">
                            @if (Model.Models.Count != 0)
                            {
                                <a class="btn btn-success btn-block" asp-controller="Order" asp-action="SubmitOrder">
                                    <i class="fa fa-circle-o-notch fa-spin"></i>
                                    Checkout
                                    <span class="glyphicon glyphicon-play"></span>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
