
@model EditProfileViewModel


<div class="container">
    <div class="row">

        <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="text-center">
                <img id="imgDisplayArea" src="https://s-media-cache-ak0.pinimg.com/originals/df/78/2c/df782c4bf2b7e271098c7d979f15e193.jpg" class="avatar img-circle img-thumbnail" alt="avatar">
            </div>
            <a class="btn btn-success" asp-controller="Account" asp-action="Edit">Edit Information</a>
            <a class=" btn btn-success" asp-controller="Account" asp-action="ChangePassword"> Change Password</a>
        </div>

        <div class="col-md-6 col-sm-6 col-xs-12 personal-info">
            <div class="panel panel-default ">
                <div class=" panel-heading"  >
                    <h3>Personal info</h3>
                </div>

                <div class="panel-body " >
                    <form class="form-horizontal" role="form" asp-controller="Account" asp-action="Profile" method="get">


                        <div class="form-group ">
                            <div class=" col-lg-6">
                                <span class="glyphicon glyphicon-user">

                                    <label class="control-label">@Model.FirstName</label>
                                    <label class="control-label">@Model.LastName</label>
                                </span>
                            </div>

                        </div>


                        <div class="form-group">

                            <div class="col-lg-6">
                                <span class=" glyphicon glyphicon-envelope">
                                    <label class="control-label">@Model.Email</label>
                                </span>

                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-lg-6">
                                <span class=" glyphicon glyphicon-map-marker">
                                    <label class="control-label">@Model.Address1</label>
                                    <label class="control-label"> @Model.Address2</label>
                                </span>

                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-lg-6">
                                <span class="glyphicon glyphicon-phone-alt">
                                    <label class="control-label">@Model.PhoneNumber</label>
                                </span>

                            </div>
                        </div>

                    </form>
                </div>

            </div>

        </div>
    </div>
</div>