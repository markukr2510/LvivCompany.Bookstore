@model LvivCompany.Bookstore.Web.ViewModels.BookViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    int authorsCount = 5;
    for (int i = 0; i < authorsCount; i++)
    {
        Model.Authors.Add(new LvivCompany.Bookstore.Entities.Author());
    }
}

<h1> Add Book </h1>
<div class="container">
    <form method="post" asp-action="AddBook" asp-controller="Book" enctype="multipart/form-data">
        <div class="col-md-4 ">
            <image id="imgDisplayArea" class="img-responsive" />
            <input asp-for="Image" type="file"
                   accept="image/*" onchange="imagePreview(this)">
        </div>
        <div class="col-md-8">
            <fieldset>
                <legend>Authors</legend>
                <div class="row">
                    <div class="col-md-6">
                        @for (int i = 0; i < authorsCount; i++)
                        {
                            <div class="form-group">
                                <label class="control-label">@("Author" + (i + 1).ToString() + " First Name")</label>
                                <input asp-for="Authors[i].FirstName" class="form-control" type="text" />
                            </div>
                        }
                    </div>
                    <div class="col-md-6">
                        @for (int i = 0; i < Model.Authors.Count; i++)
                        {
                            <div class="form-group">
                                <label class="control-label">@("Author" + (i + 1).ToString() + " Last Name")</label>
                                <input asp-for="Authors[i].LastName" class="form-control" type="text" />
                            </div>
                        }
                    </div>
                </div>
                <label></label>
            </fieldset>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control input-md" type="text">
            </div>
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Year" class="control-label"></label>
                    <input asp-for="Year" class="form-control input-md" type="text">
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="NumberOfPages" class="control-label"></label>
                    <input asp-for="NumberOfPages" class="form-control input-md" type="text">
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Price" class="control-label"></label>
                    <div class="input-group">
                        <span class="input-group-addon">$</span>
                        <input asp-for="Price" class="form-control input-md" type="text">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-8">
                    <label asp-for="PublisherName" class="control-label"></label>
                    <input asp-for="PublisherName" class="form-control input-md" type="text">
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control input-md" type="text">
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Categories" class="control-label"></label>
                <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-control">
                    <option>Please select a category</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="10"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-success" type="submit">Submit</button>
                <button class="btn btn-danger col-md-offset-4" type="reset">Cancel</button>
            </div>
        </div>
    </form>
</div>

@section scripts
    {
    <script src="http://code.jquery.com/jquery-1.8.2.js" asp-append-version="true"></script>
    <script src="~/js/addimage.js" asp-append-version="true"></script>
}