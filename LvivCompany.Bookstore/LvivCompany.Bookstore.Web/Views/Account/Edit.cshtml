
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @model LvivCompany.Bookstore.Web.ViewModels.RegisterViewModel
    <link href="~/css/RegLogStyle.css" rel="stylesheet" />
    <div class="container " style="padding-top: 0px;">
        <div class="row">
            <!-- left column -->
         
            
            <!-- edit form column -->
            <div class="col-md-6 col-sm-6 col-xs-12 personal-info">

                <h3>Personal info</h3>
                <form class="form-horizontal" role="form" asp-controller="Account" asp-action="Edit" method="get"  enctype="multipart/form-data">
                    <div class="col-md-4 col-sm-4 col-xs-12">
                        <div class="text-center">



                            <img id="imgDisplayArea" class="avatar img-circle img-thumbnail" />
                            <h6>Upload a different photo...</h6>

                            <input asp-for="Photo" type="file" onchange="imagePreview(this)">

                            <script type="text/javascript">
                                function imagePreview(input) {
                                    if (input.files && input.files[0]) {
                                        var filerdr = new FileReader();
                                        filerdr.onload = function (e) {
                                            $('#imgDisplayArea').attr('src', e.target.result);
                                        };
                                        filerdr.readAsDataURL(input.files[0]);
                                    }
                                }
                            </script>

                        </div>
                    </div> 

                    <div class="form-group ">
                        <label asp-for="FirstName" class="col-lg-3 control-label">First name:</label>
                        <div class="col-lg-8">
                            <input border="0" type="text" class="form-control" asp-for="FirstName"  />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="LastName" class="col-lg-3 control-label">Last name:</label>
                        <div class="col-lg-8">
                            <input  type="text" class="form-control" asp-for="LastName"  />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="col-lg-3 control-label">Email:</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" asp-for="Email"  />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Address1" class="col-lg-3 control-label">Address1:</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" asp-for="Address1"  />
                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="Address2" class="col-lg-3 control-label">Address2:</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" asp-for="Address2"  />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="col-lg-3 control-label">Phone Number:</label>
                        <div class="col-lg-8">
                            <input type="text" class="form-control" asp-for="PhoneNumber"  />
                        </div>
                    </div>
                    
                    <div class="form-group" >
                        <label class="col-md-3 control-label"></label>
                        <div class="col-md-8">
                            <input class="btn btn-success" value="Save Changes" type="submit" asp-action="Edit" asp-controller="Account" formmethod="post" />
                         
                            <a class="btn btn-default" value="Cancel" asp-controller="Account" asp-action="Profile">Cancel</a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>